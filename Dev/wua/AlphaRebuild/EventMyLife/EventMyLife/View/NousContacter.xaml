<Page
    x:Class="EventMyLife.View.NousContacter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventMyLife.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <RelativePanel Style="{StaticResource MainRelativePan}" HorizontalAlignment="Center">
    <TextBox FontSize="24"
                 BorderThickness="2"
                 BorderBrush="Black"
                 Text="Titre"
                 Margin="10"/>
    <TextBox FontSize="24"
                 BorderThickness="2"
                 BorderBrush="Black"
                 Text="Object"
                 Margin="10"/>

    <!-- ATTENTION il manque un menu déroulant pour préciser particulier ou Pro -->

    <TextBox FontSize="16"
                 BorderBrush="Black"
                 BorderThickness="2"
                 Text="Message*"
                 Margin="10"
                 MinHeight="200"
                 />
    <StackPanel Orientation="Horizontal" Margin="5">
        <Button Name="NousContacterButton"
                Content="Envoyer"
                    Margin="10,10,10,10"/>
        <Button Name="CancelNContactButton"
                Content="annuler"
                Click="CancelNContactButton_Click"
                Margin="10,10,10,10"/>
    </StackPanel>
</RelativePanel>

</Page>

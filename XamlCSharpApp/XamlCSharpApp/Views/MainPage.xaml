<Page
    x:Class="XamlCSharpApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XamlCSharpApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="LightGray" >

        <StackPanel Background="Gray" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="FormButton" Content="go" Tapped="FormButton_Tapped"/>
            <Button x:Name="BackButton" Content="back" Tapped="BackButton_Tapped"/>
            <Button x:Name="forms" Content="" Tapped="forms_Tapped"/>
        </StackPanel>

        <Frame x:Name="MyFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="5" Margin="5" MinHeight="650">
            <Frame.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Frame.Background>
        </Frame>

    </StackPanel>
</Page>
